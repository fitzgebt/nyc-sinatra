<h1>Create a Figure</h1>

<form action="/figures" method="POST">
  <label type="text" name="figure">Figure Name:</label>
  <br>
  <input type="text" name="figure[name]" id="figure_name">

  <br>
  <p>Select an existing Title or create a new one below.</p>


  <h3>Existing Titles</h3>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><%= title.name %><br>  
    <% end %>
  <br>

  <h3>New Title</h3>
  <label>Title Name: </label>
  <br>
  <input type="text" name="title[name]" id="new_title"></input>
  <br><br>

  <h3>Existing Landmarks</h3>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %></input><br>  <% end %>
  <br>

  <h3>New Landmark</h3>
  <label>Landmark Name: </label>
  <br>
  <input type="text" name="landmark[name]" id="new_landmark"></input>
  <input type="number" name="landmark[year_completed]" id="landmark_year"></input>
  <br><br>

  <input type="submit" value="Create New Figure">
</form>