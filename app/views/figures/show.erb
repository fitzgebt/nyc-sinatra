<h1><%=@figure.name%></h1>
<h4>Titles:</h4>
<ul>
    <%@figure.titles.each do |title|%>
        <li><%=title.name%></li>
    <%end%>
</ul><br>
<h4>Landmarks:</h4>
<ul>
    <%@figure.landmarks.each do |landmark|%>
        <li><%=landmark.name%> - <%=landmark.year_completed%></li>
    <%end%>
</ul>
<form action="/figures/<%=@figure.id%>/edit>">
    <button type="button">Edit Figure</button>
</form>
