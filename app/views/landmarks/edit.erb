<h2>Edit Historical Landmark</h2>

<form action="/landmarks/<%= @landmark.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <label type="text" name="landmark">Landmark Name:</label>
  <br>
  <input type="text" name="landmark[name]" id="name" value="<%=@landmark.name%>">
  <input type="number" name="landmark[year_completed]" id="year_completed" value="<%=@landmark.year_completed%>">

  <br>
  <p>Select an existing Figure or create a new one below.</p>

  <h3>Existing Figures</h3>
  <% @figures.each do |figure| %>
    <input type="checkbox" name="landmark[figure_id]" id="figure_<%= figure.id %>" value="<%= figure.id %>"<%='checked' if @landmark.figure_id == figure.id %>><%= figure.name %><br> 
    <% end %>
  <br>

  <h3>New Figure</h3>
  <label>Figure Name: </label>
  <br>
  <input type="text" name="figure[name]" id="new_figure"></input>

  
  

  <input type="submit" value="Edit Landmark">

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
