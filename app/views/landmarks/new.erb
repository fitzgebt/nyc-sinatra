<h2>Create New Landmark</h2>

<form action="/landmarks" method="POST">
  <label type="text" name="landmark">Landmark Name:</label>
  <br>
  <input type="text" name="landmark[name]" id="landmark_name">
  <input type="number" name="landmark[year_completed]" id="landmark_year_completed"></input>
  <br>
  <p>Select an existing Figure or create a new one below.</p>

  <h3>Existing Figures</h3>
  <% @figures.each do |figure| %>
    <input type="checkbox" name="landmark[figure_id]" id="figure_<%= figure.id %>" value="<%= figure.id %>"><%= figure.name %></input><br>  <% end %>
  <br>

  <h3>New Figure</h3>
  <label>Figure Name: </label>
  <br>
  <input type="text" name="figure[name]" id="new_figure"></input>

  <h3>Existing Titles</h3>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><%= title.name %><br>  
    <% end %>
  <br>

  <h3>New Title</h3>
  <label>Title Name: </label>
  <br>
  <input type="text" name="title[name]" id="new_title"></input>
  <br><br>
  

  <input type="submit" value="Create New Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
